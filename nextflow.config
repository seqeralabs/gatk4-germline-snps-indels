manifest {
    name = 'GATK4 Germline SNP and Indel Analysis'
    description = 'Workflow for germline short variant discovery using GATK4'
    version = '0.0.1'
    author = 'Evan Floden <evan@seqera.io>; Abhinav Sharma <abhi18av@outlook.com>'
    mainScript = 'gatk4-germline-snps-indels.nf'
    defaultBranch = 'master'
    homePage = 'https://github.com/seqeralabs/gatk4-germline-snps-indels'
    nextflowVersion = '20.07.0'
}

dockerhub {
    docker.enabled = true
    docker.fixOwnership = true
    process.ext.registry = 'https://hub.docker.com/r/seqeralabs/'
}


profiles {

    standard {
        process.executor = 'awsbatch'
        process.queue = 'priorityjobqueueA92026F-abd1c6022b591cb'
    }

    c5 {
        process.executor = 'awsbatch'
        process.queue = 'NfDemandc5Queue'
    }

    m5 {
        process.executor = 'awsbatch'
        process.queue = 'NfDemandM5Queue'
    }

    r5 {
        process.executor = 'awsbatch'
        process.queue = 'NfDemandr5Queue'
    }
}


aws.batch.cliPath = "/opt/aws-cli/bin/aws"
